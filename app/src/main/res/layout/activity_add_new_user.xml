<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewUserActivity">
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp" app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter first name" android:id="@+id/firstNameInput"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent"
        android:layout_margin="10dp" app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter last name" android:id="@+id/lastNameInput"
        app:layout_constraintTop_toBottomOf="@+id/firstNameInput"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:id="@+id/saveButton"
        android:textAllCaps="false" android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>